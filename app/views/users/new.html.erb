<h1>アカウント作成</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="sign_page">
<%= form_with(model: @user, local: true) do |f| %><ul class="row">
  <li class="col-sm-4 col-md-3">
  <%= f.label :名前 %>
  <%= f.text_field :name %></li>
  <li class="col-sm-4 col-md-3">
  <%= f.label :メール %>
  <%= f.email_field :email %></li>
  <li class="col-sm-4 col-md-3">
  <%= f.label :パスワード %>
  <%= f.password_field :password %></li>
  <li class="col-sm-4 col-md-3">
  <%= f.label :パスワード再確認 %>
  <%= f.password_field :password_confirmation %></li>
  </div>
    <li class="create_button">
  <%= f.submit "Create my account" %></li>
<% end %>