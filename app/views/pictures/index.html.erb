<p id="notice"><%= notice %></p>
<div class="title">
<h1>投稿一覧</h1>
</div>
<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>投稿画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.user.name %></td>
        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
        <td><%= image_tag(picture.image.url)  %></td>
        <td><%= link_to '詳細確認', picture %></td>
        <td><%= link_to '編集', edit_picture_path(picture) %></td>
        <td><%= link_to '削除', picture, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>


